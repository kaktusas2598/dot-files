! urxvt

!! urxvt appearance
URxvt*geometry:                160x60
!URxvt*font: xft:Liberation Mono:pixelsize=14:antialias=false:hinting=true
!URxvt*font: xft:Inconsolata:pixelsize=17:antialias=true:hinting=true
!URxvt*boldFont: xft:Inconsolata:bold:pixelsize=17:antialias=true:hinting=true
!urxvt*font: xft:Inconsolata\ for\ Powerline:pixelsize=14
!URxvt*boldFont: xft:Liberation Mono:bold:pixelsize=14:antialias=false:hinting=true
urxvt*font: xft:UbuntuMono Nerd Font Mono:style=Regular:size=15:antialias=true:hinting=true
urxvt*boldFont: xft:UbuntuMono Nerd Font Mono:style=Bold:size=15:antialias=true:hinting=true
urxvt*italicFont: xft:UbuntuMono Nerd Font Mono:style=Italic:size=15:antialias=true:hinting=true

URxvt.intensityStyles: false
URxvt.letterSpace: 0
URxvt.lineSpace: 1
URxvt.depth: 32
URxvt.background: [85]#000000
URxvt*borderless: 1
URxvt*scrollBar: false
URxvt*saveLines: 2000
URxvt.transparent: true
URxvt*.shading: 15
URxvt.internalBorder: 3
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
!URxvt*blurRadius: 3


! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

! Meta modifier for kybindings
!URxvt.modifier: super

!! urxvt extensions
! Download perl extensions from: https://github.com/xyb3rt/urxvt-perls
! and https://raw.githubusercontent.com/simmel/urxvt-resize-font/master/resize-font
! and copy them to ~/.urxvt/ext/
!! perl extensions
URxvt.perl-lib: ~/.urxvt/ext
! clipboard extension is only needed for versions older than 9.20
URxvt.perl-ext:             default,url-select,clipboard,resize-font,keyboard-select

! url-select (part of urxvt-perls package)
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.url-select.autocopy:  true
URxvt.url-select.button:    2
URxvt.url-select.launcher:  google-chrome
URxvt.url-select.underline: true

URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

! url-select lets us press Alt+U to navigate URLs and press Enter to visit it using browser defined here
URxvt.urlLauncher: firefox
URxvt.matcher.button: 1
!URxvt.keysym.M-u: perl:matcher:select
URxvt.underlineURLs: true
URxvt.urlButton: 1

